@model MyWallet.Models.CreateCategory

@{
    ViewData["Title"] = "Создание категории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Категория</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrEdit" method="post">
            <input asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input type="color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ParrentId" asp-items="Model.Categories" class="form-control">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                @if (!Model.Id.HasValue)
                {
                    <input type="submit" value="Создать" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Обновить" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
